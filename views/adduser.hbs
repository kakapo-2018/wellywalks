<h3>Add User</h3>
<form action="/adduser" method="POST">
    <input type="text" name="name" placeholder="name" /></br>
    <input type="text" name="level" placeholder="level" /></br>
    <input type="text" name="bio" placeholder="bio" /></br>
    <input type="url" name="image" placeholder="image" /></br>
    <p></p>
    <input id="submit" type="submit" value="Sign up" /></br>
</form>
<p></p>
{{#if success}}
    <h2 id="success">Added user {{name}}  <i class="fas fa-check"></i></h2>
{{/if }}

<a href="/">Home</a></br>