{{!-- Form for new walks --}}
<div class="new-walk-form">
<form action="/walks/" method="POST">
      <select name="walk_id">
        {{#each walks}}
          <option value="{{id}}" name="optionName">{{walk_name}}</option>
        {{/each}}
      </select>
      <input id="submit" type="submit" value="Let's go!" />
</form>
</div>




